import UIKit

//1. Написать функцию, которая на вход принимает число: сумма, которую пользователь хочет положить на вклад, следующий аргумент это годовой  процент, третий аргумент это срок Функция возвращает сколько денег получит пользователь по итогу

var aa: Double = 10000  //сумма вклада
var bb: Double = 10      //процент
var cc = 10             //колличество месяцев
var d: Double = 0

func money(a: Double, b: Double, c: Int) -> Double{
    d = a * (b / 10) / 365*30
    aa = aa + d
    return d
}
while cc != 0{
    money(a: aa, b: bb, c: cc)
    cc -= 1
    
}
print("вы заработали: " + String(money(a: aa, b: bb, c: cc)) + " рублей")


//2. Создать перечисление, которое содержит 3 вида пиццы и создать  переменные с каждым видом пиццы.
enum Pizza {
    case pepperoni
    case diablo
    case chiken
}

func getPizza(pizza: Pizza) -> String{
    switch pizza {
    case .pepperoni: return "пеперони"
    case .diablo: return "диабло"
    case .chiken: return "куриная"
    }
}
print(getPizza(pizza: Pizza.pepperoni))




//3. Добавить возможность получения названия пиццы через  rawValue
enum Pizzz: String{
    case pepperoni = "с колбасой"
    case diablo = "острая"
    case chiken
}

func setNumber(name: Pizzz) -> String {
    
    name.rawValue
}
print(setNumber(name: .diablo))
    
